int SelectYN() {
  int Answer ; //Yes=1, No=0
  boolean AlreadyAnswer = false;
  int check1 = 0;
  int check2 = 0;
  while (AlreadyAnswer == false) {
    int distance = Read();
    // for loop is used to make sure users want to select that choice
    for(int freeze = 0; freeze < 3; freeze ++){
      if (distance < 20) {
        Answer = 1;//YES
        check1 += 1;
      }
      else if (distance > 20 and distance < 40) {
        Answer = 0;//NO
        check2 += 1;
      }
    delay(800);
    }
    if(check1 == 3){
      display.println("YES");
      display.display();
      AlreadyAnswer = true;
    }
    else if(check2 == 3){
      display.println("NO");
      display.display();
      delay(500);
//      Sure();
      AlreadyAnswer = true;
    }
  }

  return Answer;
}

